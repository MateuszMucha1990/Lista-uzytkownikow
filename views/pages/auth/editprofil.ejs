<h1>Mój profil</h1>

<form method="POST" action="">
    <div class="mb-3">
        <label for="email" class="form-label">email</label>
        <input type="email" 
        name="email"
        value="<%= form.email%>"
        id="email"
        class="form-control
        <%- errors?.email ? 'is-invalid' : '' %> "
        required>
        
        <% if (errors?.email) { %>
            <div class="invalid-feedback"> <%= errors.email.message %></div>
         <% } %>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">hasło</label>
        <input type="password" 
        name="password" 
        id="password"
        class="form-control <%- errors?.password ? 'is-invalid' : ''%>">
        <% if (errors?.password) { %>
            <div class="invalid-feedback"> <%= errors.password.message %></div>
         <% } %>
    </div>

    <div class="mb-3">
        <label for="firstName" class="form-label">Imie</label>
        <input type="text" 
        name="firstName" 
        id="firstName"
        value="<%= form.firstName %>"
        class="form-control <%- errors?.firstName ? 'is-invalid' : ''%>">
        <% if (errors?.firstName) { %>
            <div class="invalid-feedback"> <%= errors.firstName.message %></div>
         <% } %>
    </div>

    <div class="mb-3">
        <label for="lastName" class="form-label">Nazwisko</label>
        <input type="text" 
        name="lastName" 
        id="lastName"
        value="<%= form.lastName %>"
        class="form-control <%- errors?.lastName ? 'is-invalid' : ''%>">
        <% if (errors?.lastName) { %>
            <div class="invalid-feedback"> <%= errors.lastName.message %></div>
         <% } %>
    </div>


    <button class="btn btn-danger"> Zapisz </button>
</form>